{
  "scripts": {
    "cz": [
      "git add -A",
      "git cz"
    ],
    "branch:$name": [
      "git pull --rebase origin main",
      "git checkout -b $name",
      "git branch"
    ],
    "develop": [
      "git switch main",
      "git pull --rebase origin main",
      "git checkout -b develop",
      "git branch"
    ],
    "sync": [
      "git switch main",
      "git pull --rebase origin main",
      "git switch develop",
      "git rebase main"
    ],    
    "feature:$name": [
      "git switch main",
      "git pull --rebase origin main",
      "git switch develop",
      "git rebase main",
      "git branch feature/$name develop",
      "git switch feature/$name",
      "git branch"
    ],
    "df:$name": "delete-feature:$name",
    "delete-feature:$name": [
      "sync",
      "git branch -d feature/$name"
    ],
    "ff:$name": "finish-feature:$name",
    "finish-feature:$name": [
      "git switch feature/$name",
      "git rebase develop",
      "git switch develop",
      "git merge feature/$name",
      "mr-featrue:$name"
    ],
    "mr-featrue:$name": [
      "git fetch -p origin",
      "git switch main",
      "git pull --rebase origin main",
      "git switch develop",
      "git rebase main",
      "git switch feature/$name",
      "git rebase develop",
      "gh pr create -f --base main",
      "git branch"
    ],
    "mr": [
      "git fetch -p origin",
      "git switch develop",
      "git add -A",
      "git cz --allow-empty",
      "git switch main",
      "git pull --rebase origin main",
      "git switch develop",
      "git rebase main",
      "gh pr create -f --base main"
    ],
    "hotfix:$name": [
      "git switch main",
      "git pull --rebase origin main",
      "git branch hotfix/$name main",
      "git switch hotfix/$name",
      "git branch"
    ],
    "dh:$name": "delete-hotfix:$name",
    "delete-hotfix:$name": [
      "git switch main",
      "git branch -d hotfix/$name",
      "git branch"
    ],
    "fh:$name": "finish-hotfix:$name",
    "finish-hotfix:$name": [
      "git switch hotfix/$name",
      "git rebase main",
      "mr-hotfix:$name"
    ],
    "mr-hotfix:$name": [
      "git fetch -p origin",
      "git switch main",
      "git pull --rebase origin main",
      "git switch hotfix/$name",
      "git rebase main",
      "gh pr create -f --base main",
      "git branch"
    ],
    "verify": [
      "git add -A",
      "git cz --allow-empty",
      "git switch main",
      "git pull --rebase origin main",
      "git switch develop",
      "git rebase main",
      "git push -f origin $(git branch --show-current)"
    ],
    "vf:$name": [
      "verify-feature$name"
    ],
    "verify-feature$name": [
      "git add -A",
      "git cz --allow-empty",
      "git switch main",
      "git pull --rebase origin main",
      "git switch develop",
      "git rebase main",
      "git switch feature/$name",
      "git rebase develop",
      "git push -f origin $(git branch --show-current)"
    ],
    "vh:$name": [
      "verify-hotfix:$name"
    ],
    "verify-hotfix:$name": [
      "git add -A",
      "git cz --allow-empty",
      "git switch main",
      "git pull --rebase origin main",
      "git switch hotfix/$name",
      "git rebase main",
      "git push -f origin $(git branch --show-current)"
    ],
    "major": [
      "version:major"
    ],
    "minor": [
      "version:minor"
    ],
    "patch": [
      "version:patch"
    ],
    "version:$revision": [
      "git fetch -p origin",
      "git switch main",
      "git pull --rebase origin main",
      "npm version $revision",
      "git push --follow-tags"
    ]
  }
}
